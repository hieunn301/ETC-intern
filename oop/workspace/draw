class Map{
    private class Data{
        int key;
        int value;

        public Data(int key, int value) {
            this.key = key;
            this.value = value;
        }

        @Override
        public boolean equals(Object obj) {
            if(obj instanceof Data)
                return this.key == ((Data)obj).key;
            return false;
        }
    }
